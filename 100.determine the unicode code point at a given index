#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    int index;

    printf("Enter a string: ");
    gets(str);

    printf("Enter the index to check: ");
    scanf("%d", &index);

    int len = strlen(str);

    if (index < 0 || index >= len) {
        printf("Invalid index!\n");
    } else {
        printf("Character at index %d: %c\n", index, str[index]);
        printf("Unicode/ASCII code point: %d\n", (unsigned char)str[index]);
    }

    return 0;
}
