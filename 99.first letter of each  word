#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char str[200];

    printf("Enter a string: ");
    gets(str);

    printf("First letters of each word: ");

    int n = strlen(str);

    for (int i = 0; i < n; i++) {
        // If first character or previous character is space
        if (i == 0 || str[i-1] == ' ') {
            if (str[i] != ' ')  // Ignore multiple spaces
                printf("%c ", str[i]);
        }
    }

    printf("\n");
    return 0;
}

