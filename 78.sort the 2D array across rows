#include <stdio.h>

int main() {
    int rows, cols, i, j, k, temp;
    
    // Input size of the 2D array
    printf("Enter number of rows and columns: ");
    scanf("%d %d", &rows, &cols);
    
    int arr[rows][cols];
    
    // Input elements of the 2D array
    printf("Enter elements of the array:\n");
    for(i = 0; i < rows; i++) {
        for(j = 0; j < cols; j++) {
            scanf("%d", &arr[i][j]);
        }
    }
    
    // Sort each row using simple bubble sort
    for(i = 0; i < rows; i++) {
        for(j = 0; j < cols-1; j++) {
            for(k = 0; k < cols-j-1; k++) {
                if(arr[i][k] > arr[i][k+1]) {
                    // Swap elements
                    temp = arr[i][k];
                    arr[i][k] = arr[i][k+1];
                    arr[i][k+1] = temp;
                }
            }
        }
    }
    
    // Print the sorted 2D array
    printf("2D Array after sorting rows:\n");
    for(i = 0; i < rows; i++) {
        for(j = 0; j < cols; j++) {
            printf("%d ", arr[i][j]);
        }
        printf("\n");
    }
    
    return 0;
}
