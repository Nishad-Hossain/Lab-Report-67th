#include <stdio.h>

int main() {
    int decimal, binary[32], i = 0;

    printf("Enter a decimal number: ");
    scanf("%d", &decimal);

    if(decimal == 0) {
        printf("Binary: 0\n");
        return 0;
    }

    // Convert decimal to binary
    while(decimal > 0) {
        binary[i] = decimal % 2;  // remainder
        decimal = decimal / 2;    // divide by 2
        i++;
    }

    printf("Binary: ");
    // Print binary in reverse order
    for(int j = i - 1; j >= 0; j--) {
        printf("%d", binary[j]);
    }
    printf("\n");

    return 0;
}
