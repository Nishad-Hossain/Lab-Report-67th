#include <stdio.h>

int main() {
    int i, j, n;

    printf("Enter the number of rows for the upper half: ");
    scanf("%d", &n);

    // Upper half (hollow pyramid)
    for(i = 1; i <= n; i++) {
        // Print leading spaces
        for(j = 1; j <= n - i; j++) {
            printf(" ");
        }
        // Print stars
        for(j = 1; j <= 2 * i - 1; j++) {
            if(j == 1 || j == 2 * i - 1) {
                printf("*");
            } else {
                printf(" ");
            }
        }
        printf("\n");
    }

    // Lower half (inverted hollow pyramid)
