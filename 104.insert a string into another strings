#include <stdio.h>
#include <string.h>

int main() {
    char str1[200], str2[100];
    int pos;

    printf("Enter the main string: ");
    gets(str1);

    printf("Enter the string to insert: ");
    gets(str2);

    printf("Enter the position to insert (starting from 0): ");
    scanf("%d", &pos);

    int len1 = strlen(str1);
    int len2 = strlen(str2);

    if (pos < 0 || pos > len1) {
        printf("Invalid position!\n");
        return 0;
    }

    // Shift characters of str1 to make space for str2
    for (int i = len1 - 1; i >= pos; i--) {
        str1[i + len2] = str1[i];
    }

    // Copy str2 into str1 at position pos
    for (int i = 0; i < len2; i++) {
        str1[pos + i] = str2[i];
    }

    str1[len1 + len2] = '\0';  // Null terminate

    printf("String
