#include <stdio.h>

int main() {
    int rows1, cols1, rows2, cols2, i, j, flag = 1;
    
    // Input size of first matrix
    printf("Enter number of rows and columns for first matrix: ");
    scanf("%d %d", &rows1, &cols1);
    
    int mat1[rows1][cols1];
    
    // Input elements of first matrix
    printf("Enter elements of first matrix:\n");
    for(i = 0; i < rows1; i++) {
        for(j = 0; j < cols1; j++) {
            scanf("%d", &mat1[i][j]);
        }
    }
    
    // Input size of second matrix
    printf("Enter number of rows and columns for second matrix: ");
    scanf("%d %d", &rows2, &cols2);
    
    int mat2[rows2][cols2];
    
    // Input elements of second matrix
    printf("Enter elements of second matrix:\n");
    for(i = 0; i < rows2; i++) {
        for(j = 0; j < cols2; j++) {
            scanf("%d", &mat2[i][j]);
        }
    }
    
    // First, check if dimensions are equal
    if(rows1 != rows2 || cols1 != cols2) {
        flag = 0; // matrices cannot be equal
    } else {
        // Compare each element
        for(i = 0; i < rows1; i++) {
            for(j = 0; j < cols1; j++) {
                if(mat1[i][j] != mat2[i][j]) {
                    flag = 0; // elements not equal
                    break;
                }
            }
            if(flag == 0) break;
        }
    }
    
    // Print result
    if(flag)
        printf("The two matrices are equal.\n");
    else
        printf("The two matrices are not equal.\n");
    
    return 0;
}
