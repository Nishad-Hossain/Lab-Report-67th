#include <stdio.h>

int main() {
    int boolean;
    char str[6]; // "true" or "false"

    printf("Enter boolean value (0 or 1): ");
    scanf("%d", &boolean);

    if (boolean == 0) {
        strcpy(str, "false");
    } else if (boolean == 1) {
        strcpy(str, "true");
    } else {
        printf("Invalid input! Enter 0 or 1.\n");
        return 0;
    }

    printf("Boolean as string: %s\n", str);

    return 0;
}
