#include <stdio.h>
#include <math.h>

int main() {
    int rows, cols, i, j;
    double sumSquares = 0;
    
    // Input matrix size
    printf("Enter number of rows and columns: ");
    scanf("%d %d", &rows, &cols);
    
    int mat[rows][cols];
    
    // Input elements of matrix
    printf("Enter elements of the matrix:\n");
    for(i = 0; i < rows; i++) {
        for(j = 0; j < cols; j++) {
            scanf("%d", &mat[i][j]);
            sumSquares += mat[i][j] * mat[i][j]; // for normal
        }
    }
    
    // Calculate trace (only for square matrices)
    int trace = 0;
    if(rows == cols) {
        for(i = 0; i < rows; i++) {
            trace += mat[i][i];
        }
        printf("Trace of the matrix: %d\n", trace);
    } else {
        printf("Trace is defined only for square matrices.\n");
    }
    
    // Calculate normal (Frobenius norm)
    double normal = sqrt(sumSquares);
    printf("Normal (Frobenius norm) of the matrix: %.2lf\n", normal);
    
    return 0;
}

