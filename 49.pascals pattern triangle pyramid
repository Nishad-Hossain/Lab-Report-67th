#include <stdio.h>

// Function to calculate factorial
int factorial(int n) {
    int fact = 1, i;
    for(i = 1; i <= n; i++) {
        fact *= i;
    }
    return fact;
}

// Function to calculate nCr (combination)
int nCr(int n, int r) {
    return factorial(n) / (factorial(r) * factorial(n - r));
}

