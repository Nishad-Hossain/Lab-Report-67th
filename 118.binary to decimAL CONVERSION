#include <stdio.h>
#include <math.h>

int main() {
    long long binary;
    int decimal = 0, i = 0, remainder;

    printf("Enter a binary number: ");
    scanf("%lld", &binary);

    while (binary != 0) {
        remainder = binary % 10;        // get the last digit
        decimal += remainder * pow(2, i); // multiply by 2^i
        binary /= 10;                   // remove last digit
        i++;
    }

    printf("Decimal: %d\n", decimal);
    return 0;
}

