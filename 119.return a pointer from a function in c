#include <stdio.h>
#include <stdlib.h>

int* createArray(int size) {
    int* arr = (int*)malloc(size * sizeof(int)); // allocate memory
    if (arr == NULL) {
        printf("Memory allocation failed.\n");
        return NULL;
    }
    for (int i = 0; i < size; i++) {
        arr[i] = i + 1; // initialize array
    }
    return arr; // return pointer
}

int main() {
    int n = 5;
    int* myArray = createArray(n);

    if (myArray != NULL) {
        printf("Array elements: ");
        for (int i = 0; i < n; i++) {
            printf("%d ", myArray[i]);
        }
        printf("\n");
        free(myArray); // free allocated memory
    }

    return 0;
}
