#include <stdio.h>
#include <string.h>

// Define a structure to store student information
struct Student {
    char name[50];
    int roll;
    float marks;
};

// Function to swap two Student structures
void swap(struct Student *a, struct Student *b) {
    struct Student temp = *a;
    *a = *b;
    *b = temp;
}

// Function to sort students by name (alphabetically)
void sortByName(struct Student students[], int n) {
    for(int i = 0; i < n-1; i++) {
        for(int j = i+1; j < n; j++) {
            if(strcmp(students[i].name, students[j].name) > 0) {
                swap(&students[i], &students[j]);
            }
        }
    }
}

int main() {
    int n;
    
    printf("Enter number of students: ");
    scanf("%d", &n);
    
    struct Student students[n];
    
    // Input student data
    for(int i = 0; i < n; i++) {
        printf("\nEnter details for student %d:\n", i+1);
        printf("Name: ");
        scanf(" %[^\n]", students[i].name);  // Read full line including spaces
        printf("Roll Number: ");
        scanf("%d", &students[i].roll);
        printf("Marks: ");
        scanf("%f", &students[i].marks);
    }
    
    // Sort students by name
    sortByName(students, n);
    
    // Display sorted student data
    printf("\nStudents sorted by name:\n");
    printf("Name\t\tRoll\tMarks\n");
    printf("--------------------------------\n");
    for(int i = 0; i < n; i++) {
        printf("%-15s\t%d\t%.2f\n", students[i].name, students[i].roll, students[i].marks);
    }
    
    return 0;
}
