#include <stdio.h>

int main() {
    int n, i, j, element;
    
    // Input size of array
    printf("Enter the number of elements in the array: ");
    scanf("%d", &n);
    
    int arr[n];
    printf("Enter the elements of the array:\n");
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    
    // Input the element to remove
    printf("Enter the element to remove: ");
    scanf("%d", &element);
    
    // Remove all occurrences of the element
    int newSize = 0; // keeps track of new array size
    for(i = 0; i < n; i++) {
        if(arr[i] != element) {
            arr[newSize] = arr[i]; // copy element if it's not equal to the one to remove
            newSize++;
        }
    }
    
