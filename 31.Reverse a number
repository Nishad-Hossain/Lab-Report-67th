


#include <stdio.h>

int main() {
    int num, originalNum, reversed = 0, remainder;

    printf("Enter an integer: ");
    scanf("%d", &num);

    originalNum = num;

    while (originalNum != 0) {
        remainder = originalNum % 10;        // Get the last digit
        reversed = reversed * 10 + remainder; // Append it to reversed number
        originalNum /= 10;                   // Remove last digit
    }

    printf("Reversed number: %d\n", reversed);

    return 0;
}
