#include <stdio.h>

int main() {
    int n;
    printf("Enter the size of square matrix (n x n): ");
    scanf("%d", &n);

    int a[n][n];
    int sum1 = 0, sum2 = 0;

    // Input matrix
    printf("Enter matrix elements:\n");
    for(int i = 0; i < n; i++) {
        for(int j = 0; j < n; j++) {
            scanf("%d", &a[i][j]);
        }
    }

    // Compute the diagonal sums
    for(int i = 0; i < n; i++) {
        sum1 += a[i][i];          // Primary diagonal
        sum2 += a[i][n - 1 - i];  // Secondary diagonal
    }

    printf("\nSum of Primary Diagonal = %d\n", sum1);
    printf("Sum of Secondary Diagonal = %d\n", sum2);

    return 0;
}

