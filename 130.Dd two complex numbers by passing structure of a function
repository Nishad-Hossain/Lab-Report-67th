#include <stdio.h>

// Define a structure for complex numbers
struct Complex {
    float real;
    float imag;
};

// Function to add two complex numbers
struct Complex addComplex(struct Complex c1, struct Complex c2) {
    struct Complex sum;
    sum.real = c1.real + c2.real;
    sum.imag = c1.imag + c2.imag;
    return sum;
}

int main() {
    struct Complex num1, num2, result;

    // Input first complex number
    printf("Enter first complex number (real and imaginary part):\n");
    printf("Real: ");
    scanf("%f", &num1.real);
    printf("Imaginary: ");
    scanf("%f", &num1.imag);

    // Input second complex number
    printf("\nEnter second complex number (real and imaginary part):\n");
    printf("Real: ");
    scanf("%f", &num2.real);
    printf("Imaginary: ");
    scanf("%f", &num2.imag);

    // Add the two complex numbers
    result = addComplex(num1, num2);

    // Display the result
    printf("\nSum of complex numbers: %.2f + %.2fi\n", result.real, result.imag);

    return 0;
}
